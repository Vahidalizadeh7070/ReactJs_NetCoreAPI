@model ManagerGameHub.Models.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<div class="row">
    <div class="col-md-10 col-sm-6">
        <h1 class="fw-normal text-dark">Edit News</h1>
        <h3 class="text-secondary fw-light">You can News with their categories and other informations</h3>
    </div>
    <div class="col-md-2 col-sm-6 text-end ">
        <a asp-action="GetAllNews" class="btn btn-light shadow btn-sm rounded-circle"><i class="bi bi-arrow-left"></i></a>
    </div>
</div>
<hr />
<div class="shadow col-md-6 offset-md-3">
    <div class="p-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="ImageOne" type="hidden" />
            <input asp-for="ImageTwo" type="hidden" />
            <input asp-for="ImageThree" type="hidden" />
            <div class="form-group pt-3 pb-3">
                <label asp-for="Title" class="control-label"></label>
                <textarea asp-for="Title" class="form-control"></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="About" class="control-label"></label>
                <textarea asp-for="About" class="form-control"></textarea>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="DescriptionOne" class="control-label"></label>
                <textarea asp-for="DescriptionOne" class="form-control"></textarea>
                <span asp-validation-for="DescriptionOne" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="DescriptionTwo" class="control-label"></label>
                <textarea asp-for="DescriptionTwo" class="form-control"></textarea>
                <span asp-validation-for="DescriptionTwo" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="DescriptionThree" class="control-label"></label>
                <textarea asp-for="DescriptionThree" class="form-control"></textarea>
                <span asp-validation-for="DescriptionThree" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="ImageFileOne" class="control-label custom-file-label"></label>
                <div class="custom-file">
                    <input asp-for="ImageFileOne" id="imageFile" class="form-control custom-file-input" />
                    <p class="text-danger">@ViewBag.FileMessageOne</p>
                </div>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="ImageFileTwo" class="control-label custom-file-label"></label>
                <div class="custom-file">
                    <input asp-for="ImageFileTwo" id="imageFile" class="form-control custom-file-input" />
                    <p class="text-danger">@ViewBag.FileMessageTwo</p>
                </div>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="ImageFileThree" class="control-label custom-file-label"></label>
                <div class="custom-file">
                    <input asp-for="ImageFileThree" id="imageFile" class="form-control custom-file-input" />
                    <p class="text-danger">@ViewBag.FileMessageThree</p>
                </div>
            </div>
            <div class="form-group pt-3 pb-3">
                    <label class="control-label">Category Id</label>
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-select" })
                </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <label asp-for="VideoUrl" class="control-label"></label>
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check pt-3 pb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Trend" /> @Html.DisplayNameFor(model => model.Trend)
                </label>
            </div>
            <div class="form-group text-end pt-3 pb-3">
                <input type="submit" value="Create new" class="btn btn-primary shadow" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
