@model LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <main class="form-signin mt-5">
        <div class="col-md-4 offset-md-4 shadow">
            <div class="p-5">
                <div class="text-center text-danger">
                    <p id="message" style="display:none">@ViewBag.ErrorMessage</p>
                </div>
                <div class="pb-5">
                    <form method="post">
                        <div class="text-center ">
                            <h1 class="text-warning"><i class="bi bi-person-circle display-1 "></i></h1>
                            <h1 class="h3 mb-3 fw-normal">Game hub</h1>
                            <h2 class="mb-3 mt-2 fw-light text-secondary">Management system</h2>
                        </div>
                        <hr />
                        <div class="form-floating mb-3">

                            <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Email address</label>
                        </div>
                        <div class="form-floating pb-5">

                            <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <div class="form-group float-end">
                            <button class="btn btn-lg btn-primary shadow" type="submit">Sign in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
@section Scripts
{
    <script>
        setTimeout(function () {
            $('#message').fadeIn('fast')
        }, 1)
        setTimeout(function () {
            $('#message').fadeOut('slow')
        }, 3000)
    </script>
}