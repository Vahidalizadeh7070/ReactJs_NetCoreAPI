@model ManagerGameHub.Models.Category

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-sm-6">
        <h1 class="fw-normal text-dark">Add Category</h1>
        <h3 class="text-secondary fw-light">You can Add category.</h3>
        <h5 class="text-secondary fw-lighter">We use these categories in any section that we'll use.</h5>
    </div>
    <div class="col-md-2 col-sm-6 text-end ">
        <a asp-action="GetAllCategories" class="btn btn-light shadow btn-sm rounded-circle"><i class="bi bi-arrow-left"></i></a>
    </div>
</div>
<hr />
<div class="shadow col-md-6 offset-md-3">
    <div class="p-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group text-end pt-3 pb-3">
                <input type="submit" value="Create a category" class="btn btn-primary shadow" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
